{
  "name": "PavelKingInTheNorth/pando",
  "description": "PHP library for handling tree structures  ",
  "keywords": [
    "php",
    "docker",
    "nginx",
    "mariadb",
    "phpmyadmin",
    "adminer",
    "tree"
  ],
  "homepage": "https://github.com/PavelKingInTheNorth/tree-data-structure",
  "license": "MIT",
  "authors": [
    {
      "name": "Paolo Combi",
      "email": "paolo@combi.li",
      "homepage": "https://combi.li"
    }
  ],
  "require": {
    "php": ">= 7.2"
  },
  "autoload": {
    "psr-4": {
      "Pando\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "tests/"
    }
  },
  "require-dev": {
    "pds/skeleton": "^1.0",
    "phpunit/phpunit": "^8",
    "phpbench/phpbench": "@dev",
    "phpstan/phpstan": "^0.12.3",
    "squizlabs/php_codesniffer": "^3.5",
    "php-coveralls/php-coveralls": "^2.2",
    "phpunit/phpcov": "^6.0",
    "friendsofphp/php-cs-fixer": "^2.16"
  },
  "scripts": {
    "test": [
      "@phpunit",
      "@phpcs",
      "@phpstan"
    ],
    "phpunit": "php vendor/bin/phpunit",
    "phpcs": "php vendor/bin/phpcs",
    "phpstan": "php -d memory_limit=-1 vendor/bin/phpstan analyse src"
  }
}
